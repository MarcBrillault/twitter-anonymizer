{
    "name": "Twitter Anonymizer",
    "description": "One-click anonymizer of tweets before sharing a screenshot.",
    "version": "1.1.0",
    "manifest_version": 2,
    "background": {
        "persistent": false,
        "scripts": [
            "background.js"
        ]
    },
    "content_scripts": [
        {
            "all_frames": true,
            "matches": [
                "https://twitter.com/*",
                "https://mobile.twitter.com/*"
            ],
            "css": [
                "styles.css"
            ],
            "js": [
                "script.js"
            ]
        }
    ],
    "icons": {
        "128": "icon-128.png",
        "64": "icon-64.png",
        "32": "icon-32.png"
    },
    "permissions": [
        "activeTab",
        "contextMenus"
    ]
}