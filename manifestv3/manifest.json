{
    "name": "Twitter Anonymizer",
    "description": "One-click anonymizer of tweets before sharing a screenshot.",
    "version": "1.2.0",
    "manifest_version": 3,
    "background": {
        "service_worker": "background.js"
    },
    "content_scripts": [
        {
            "run_at": "document_idle",
            "all_frames": true,
            "matches": [
                "https://twitter.com/*",
                "https://mobile.twitter.com/*",
                "https://tweetdeck.twitter.com/*"
            ],
            "css": [
                "styles.css"
            ],
            "js": [
                "script.js"
            ]
        }
    ],
    "icons": {
        "128": "icon-128.png",
        "64": "icon-64.png",
        "32": "icon-32.png"
    },
    "permissions": [
        "activeTab",
        "contextMenus",
        "scripting"
    ]
}